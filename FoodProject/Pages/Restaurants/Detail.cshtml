@page "{restaurantId:int}"

@model FoodProject.Pages.Restaurants.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h2>@Model.Restaurant.Name</h2>

@if (Model.SavedRestaurant)
{
    <div class="alert alert-success">You have saved information successfully!</div>
}

<div>
    @Model.Restaurant.Id
</div>
<div>
    Location : @Model.Restaurant.Location
</div>
<div>
    Cuisine : @Model.Restaurant.Cuisine
</div>

<a asp-page="./List" class="btn btn-info">All Restaurants</a>